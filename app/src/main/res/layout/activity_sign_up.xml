<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_signup_name"
            android:hint="Name"
            android:padding="5dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textSize="18sp"
            android:layout_marginTop="30dp"
            android:inputType="textPersonName"
            android:imeOptions="actionNext"
            />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_signup_email"
            android:hint="Email"
            android:padding="5dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textSize="18sp"
            android:layout_below="@id/et_signup_name"
            android:layout_marginTop="30dp"
            android:inputType="textEmailAddress"
            android:imeOptions="actionNext"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_signup_password"
            android:hint="Password"
            android:padding="5dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textSize="18sp"
            android:layout_marginTop="30dp"
            android:inputType="textPassword"
            android:imeOptions="actionNext"
            android:layout_below="@id/et_signup_email"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_signup_cpassword"
            android:hint="Confirm Password"
            android:padding="5dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textSize="18sp"
            android:layout_marginTop="30dp"
            android:inputType="textPassword"
            android:imeOptions="actionNext"
            android:layout_below="@id/et_signup_password"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_signup_address"
            android:hint="Address"
            android:padding="5dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textSize="18sp"
            android:layout_marginTop="30dp"
            android:inputType="textCapSentences"
            android:imeOptions="actionNext"
            android:layout_below="@id/et_signup_cpassword"
            />


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bt_signup_submit"
            android:hint="Submit Form"
            android:padding="5dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:layout_marginTop="50dp"
            android:textStyle="bold"
            android:background="@color/colorPrimary"
            android:layout_below="@id/et_signup_address"

            />
    </RelativeLayout>

</ScrollView>